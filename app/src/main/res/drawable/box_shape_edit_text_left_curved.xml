<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/spacing_x_small" android:topLeftRadius="@dimen/spacing_x_small"/>
                    <stroke android:color="@color/grey_dark" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/spacing_x_small" android:topLeftRadius="@dimen/spacing_x_small"/>
                    <stroke android:color="?attr/label" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>