<resources>
    <!-- Base application theme. -->
    <style name="Theme.PasswordManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/grey_darkest</item>

        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/red_dark</item>
        <item name="colorAccent">@color/blue_dark</item>

        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_dark</item>
        <item name="colorSecondaryVariant">@color/blue_grey_light</item>
        <item name="colorOnSecondary">@color/grey_darkest</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:colorEdgeEffect">@color/transparent</item>

        <item name="android:textColorLink">@color/blue_dark</item>
        <item name="colorLink">@color/blue_dark</item>
        <item name="android:textColorHint">?attr/labelTertiary</item>

        <item name="label">@color/white</item>
        <item name="labelSecondary">@color/opaque_0.6</item>
        <item name="labelTertiary">@color/opaque_0.3</item>
        <item name="colorGreen">@color/green_dark</item>

        <item name="colorSeparator">@color/separator_dark</item>
        <item name="iconColorPrimary">?attr/colorLink</item>
        <item name="iconColorSecondary">?attr/labelTertiary</item>

        <item name="bottomNavigationStyle">@style/BottomDark</item>
        <item name="actionMenuTextColor">@color/blue_dark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="appBarLayoutStyle">@style/AppTheme.AppBarOverlay</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>
    <!--Bottom Navigation View===================================================================-->
    <style name="BottomDark" parent="Widget.Design.BottomNavigationView">
        <item name="android:itemBackground">@color/light_black</item>
        <item name="backgroundTint">@color/light_black</item>
        <item name="itemIconTint">@drawable/ripple_dark</item>
        <item name="itemTextColor">@drawable/ripple_dark</item>
        <item name="itemRippleColor">@color/blue_light</item>
        <item name="elevation">0dp</item>
    </style>

    <!--BottomSheetStyles========================================================================-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottomsheet</item>
    </style>
</resources>