<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.summer.passwordmanager.ui.screens.main.viewmodels.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/exportFileNameTv"
            layout="@layout/field_new_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_x_medium"
            app:hint="@{@string/file_name}"
            app:layout_constraintTop_toTopOf="parent"
            app:textInputModel="@{model.fileName}"
            app:title="@{@string/file_name}" />

        <include
            android:id="@+id/exportFileKeyTv"
            layout="@layout/field_new_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_x_medium"
            app:hasIconEnd="@{true}"
            app:hint="@{@string/file_key}"
            app:layout_constraintTop_toBottomOf="@id/exportFileNameTv"
            app:textInputModel="@{model.key}"
            app:title="@{@string/file_key}" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/exportCopyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:background="@color/transparent"
            android:drawableTint="@color/blue_dark"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_copy"
            app:layout_constraintBottom_toBottomOf="@id/exportFileKeyTv"
            app:layout_constraintEnd_toEndOf="@id/exportFileKeyTv" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@id/exportFileKeyTv">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exportGenerateKeyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_x_small"
                android:layout_weight="0.5"
                android:text="@string/generate_key" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exportBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_x_small"
                android:layout_weight="0.5"
                android:text="@string/export_file" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>